<% content_for :head do -%>
  <meta name="title" content="<%= Spree.t(:contact_us_title) %>">
<% end -%>

<%# content_for :sidebar do %>
  <%# if "products" == @current_controller && @taxon %>
    <%#= render :partial => "spree/shared/filters" %>
  <%# else %>
    <%#= render :partial => "spree/shared/taxonomies" %>
  <%# end %>
<%# end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @contact } %>

<h1><%= Spree.t(:contact_us_title) %></h1>
<%= form_for @contact, :url => contacts_path, :html => { :novalidate => '' } do |f| %>
  <% if SpreeContactUs.require_name %>
    <p>
      <%= f.label Spree.t('activemodel.attributes.contact_us/contact.name') %>
      <span class="required">*</span><br/>
      <%= f.text_field :name, class: 'required' %>
    </p>
  <% end %>
  <p>
    <%= f.label Spree.t('activemodel.attributes.contact_us/contact.email') %>
    <span class="required">*</span><br/>
    <%= f.email_field :email, class: 'required email' %>
  </p>
  <% if SpreeContactUs.require_subject %>
    <p>
      <%= f.label Spree.t('activemodel.attributes.contact_us/contact.subject') %>
      <span class="required">*</span><br/>
      <%= f.text_field :subject, class: 'required' %>
    </p>
  <% end %>
  <p>
    <%= f.label Spree.t('activemodel.attributes.contact_us/contact.message') %>
    <span class="required">*</span><br/>
    <%= f.text_area :message, class: 'required' %>
  </p>
  <p>
    <%= f.submit Spree.t(:submit), :alt => Spree.t(:submit), :id => 'contact_us_contact_submit', :title => Spree.t(:submit) %>
  </p>
  <br/>
  <br/>
  <%= link_to 'Download exchange and return from', contact_us_download_url %>
<% end %>
